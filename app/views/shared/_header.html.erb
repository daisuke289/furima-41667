<header>
  <div class="top-page-header">
    <%= link_to image_tag("furima-logo-color.png", class: "furima-icon"), "/" %>
    <div class="search-contents">
      <form class="search-form" action="#">
        <input class="input-box" placeholder="キーワードを探す">
        <button class="search-button">
          <%= image_tag "search.png", class: "search-icon" %>
        </button>
      </form>
    </div>
  </div>
  <ul class="nav">
    <li class="lists-left">
      <%= link_to "カテゴリー", "#", class: "category-list" %>
    </li>
    <li class="lists-left">
      <%= link_to "ブランド", "#", class: "brand-list" %>
    </li>
    <li class="lists-right">
      <% if user_signed_in? %>
        <%= link_to current_user.nickname, "#", class: "user-nickname" %>
        <%= link_to "ログアウト", destroy_user_session_path, data: { turbo_method: :delete }, class: "logout" %>
      <% else %>
        <%= link_to "ログイン", new_user_session_path, class: "login", data: { turbo: false } %>
        <%= link_to "新規登録", new_user_registration_path, class: "sign-up", data: { turbo: false } %>
      <% end %>
    </li>
  </ul>
</header>
